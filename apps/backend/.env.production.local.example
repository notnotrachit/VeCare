# PORT
PORT = 3000

# LOG
LOG_FORMAT = prod
LOG_DIR = ../logs

# CORS
ORIGIN = <YOUR_FRONTEND_URL>
CREDENTIALS = true

# OpenAI API Key (Required for AI verification)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY = <YOUR_OPENAI_API_KEY>

# Pinata IPFS Configuration (Required for document storage)
# Get your keys at: https://app.pinata.cloud/
PINATA_API_KEY = <YOUR_PINATA_API_KEY>
PINATA_API_SECRET = <YOUR_PINATA_API_SECRET>
PINATA_GATEWAY = https://gateway.pinata.cloud

# I/O
MAX_FILE_SIZE = 50mb

# WALLET (Production - use your own secure private key)
ADMIN_PRIVATE_KEY = <YOUR_ADMIN_PRIVATE_KEY>
ADMIN_ADDRESS = <YOUR_ADMIN_ADDRESS>

# NETWORK (Testnet or Mainnet)
NETWORK_URL = https://testnet.vechain.org
NETWORK_TYPE = testnet # testnet, mainnet

# Rewards
REWARD_AMOUNT = 1